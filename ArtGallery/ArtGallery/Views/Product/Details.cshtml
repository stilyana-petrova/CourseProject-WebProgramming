@model ArtGallery.Models.Product.ProductIndexVM

@{
    ViewData["Title"] = "Details";
}

<a asp-action="Index"><i class="bi bi-arrow-90deg-left"></i></a>
<br />
<br />
<h1>@Html.DisplayFor(model => model.Name)</h1>


<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card-img left-side-product-box">
                <img class="card-img left-side-product-box" src="@Html.DisplayFor(model=>model.Picture)" alt="Image" width="300" />
            </div>
        </div>


        <div class="col-lg-6 right-side-pro-detail">
            <p class="m-0 p-0 price-pro" style="">Artist: @Html.DisplayFor(model => model.ArtistName)</p>
            <p class="pt-2" style="font-size:20px">BGN @Html.DisplayFor(model => model.Price)</p>




            <div class="container mt-5">
                <main role="main" class="pb-3">

                    <div class="container-fluid">
                        <ul class="nav nav-tabs">

                            <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#rLocal">Product Details</a></li>
                            <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#rrEPRA">In Stock</a></li>
                            <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#rSWA">Artist</a></li>
                        </ul>
                        <div>
                            <div class="tab-content">

                                <div role="tabpanel" class="tab-pane active" id="rLocal">
                                    <br />
                                    <div class="card" style="width: 100%;">

                                        <div class="card-body">
                                            <p>
                                                <span>
                                                    @Html.DisplayFor(model => model.Description)
                                                </span>
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div role="tabpanel" class="tab-pane fade" id="rrEPRA">
                                    <br />
                                    <div class="card" style="width: 100%;">

                                        <div class="card-body">
                                            <p>
                                                In stock: @Html.DisplayFor(model => model.Quantity)
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div role="tabpanel" class="tab-pane fade" id="rSWA">
                                    <br />
                                    <div class="card" style="width: 100%;">

                                        <div class="card-body">
                                            <p>
                                                Artist: @Html.DisplayFor(model => model.ArtistName)
                                                <button class="btn btn-dark">More For the Artist</button>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div>
                                    @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Admin")))
                                    {
                                        <a asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil-square"></i></a>
                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}